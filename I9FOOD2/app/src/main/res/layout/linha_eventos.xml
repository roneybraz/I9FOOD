<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linha_produto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">>

    <ImageView
        android:id="@+id/linha_Eventos_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="0.19"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/linha_eventos_local"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_weight="0.02"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/finaliza_NuCartao"
        app:layout_constraintLeft_toLeftOf="@+id/linha_Descricao"
        app:layout_constraintRight_toRightOf="@+id/linha_pedidos_Titulo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/linha_eventos_data" />

    <TextView
        android:id="@+id/linha_eventos_data"
        android:layout_width="78dp"
        android:layout_height="25dp"
        android:layout_weight="0.02"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/finaliza_NuCartao"
        app:layout_constraintLeft_toLeftOf="@+id/linha_Descricao"
        app:layout_constraintRight_toRightOf="@+id/linha_pedidos_Titulo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/linha_eventos_Titulo"
        android:layout_width="280dp"
        android:layout_height="31dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/linha_Descricao"
        app:layout_constraintRight_toRightOf="@+id/linha_Descricao"
        app:layout_constraintTop_toBottomOf="@+id/linha_pedidos_img"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_below="@+id/linha_Eventos_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Data: "
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/linha_Preco"
        app:layout_constraintLeft_toLeftOf="@+id/finaliza_NuCartao"
        app:layout_constraintRight_toLeftOf="@+id/linha_Preco"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_above="@+id/linha_eventos_local"
        android:layout_alignStart="@+id/linha_eventoDescricao" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Local: "
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/linha_Preco"
        app:layout_constraintLeft_toLeftOf="@+id/finaliza_NuCartao"
        app:layout_constraintRight_toLeftOf="@+id/linha_Preco"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linha_eventoDescricao"
        android:layout_alignStart="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:srcCompat="@drawable/line"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/linha_eventos_local"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/linha_evento_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imageView"
        android:layout_alignEnd="@+id/linha_eventos_Titulo"
        app:srcCompat="@mipmap/ic_participarevento" />

    <TextView
        android:id="@+id/linha_eventoDescricao"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/linha_eventos_Titulo"
        android:layout_alignStart="@+id/linha_eventos_Titulo"
        android:layout_below="@+id/linha_eventos_Titulo"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic" />

</RelativeLayout>