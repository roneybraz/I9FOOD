<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.example.televideo.i9food.LoginActivity">


    <Button
        android:id="@+id/login_bntEntrar"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="#e3b47c"
        android:elevation="0dp"
        android:text="ENTRAR"
        android:textColor="#2c1407"
        app:layout_constraintBottom_toTopOf="@+id/login_bntCadastrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/login_bntCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:keyboardNavigationCluster="false"
        android:text="QUERO ME CADASTRAR!"
        android:textColor="#e3b47c"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:onClick="ToCadatrar" />

    <EditText
        android:id="@+id/login_txtSenha"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="59dp"
        android:backgroundTint="#e3b47c"
        android:ems="10"
        android:hint="SENHA"
        android:textColorHint="#e3b47c"
        android:inputType="textPersonName"
        android:textColor="#e3b47c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/login_txtEmail"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="306dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="306dp"
        android:backgroundTint="#e3b47c"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:textColor="#e3b47c"
        android:textColorHint="#e3b47c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="307dp"
        android:layout_height="248dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
